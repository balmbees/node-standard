{
  "name": "@vingle/renovate-config",
  "version": "1.0.18",
  "description": "Renovate configurations for Vingle",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/balmbees/node-standard.git"
  },
  "keywords": [
    "vingle",
    "renovate"
  ],
  "author": "MooYeol Prescott Lee <mooyoul@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/balmbees/node-standard/issues"
  },
  "homepage": "https://github.com/balmbees/node-standard#readme",
  "renovate-config": {
    "default": {
      "extends": ["config:base"],
      "automerge": false,
      "automergeType": "branch-push",
      "minor": {
        "automerge": true
      },
      "packageRules": [
        {
          "packageNames": ["aws-sdk"],
          "schedule": ["on sunday"]
        }
      ],
      "patch": {
        "automerge": true
      },
      "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
          "on monday"
        ],
        "automerge": true
      },
      "rebaseStalePrs": true,
      "schedule": [
        "at any time"
      ],
      "timezone": "Asia/Seoul",
      "assignees": ["mooyoul"]
    },
    "nodejs8": {
      "packageRules": [
        {
          "packageNames": ["node"],
          "allowedVersions": "~8.10.0"
        },
        {
          "packageNames": ["@types/node"],
          "allowedVersions": "^8.10.0"
        },
        {
          "packageNames": ["npm"],
          "allowedVersions": "^6.10.2"
        }
      ]
    },
    "nodejs10": {
      "packageRules": [
        {
          "packageNames": ["node"],
          "allowedVersions": "^10.0.0"
        },
        {
          "packageNames": ["@types/node"],
          "allowedVersions": "^10.0.0"
        },
        {
          "packageNames": ["npm"],
          "allowedVersions": "^6.10.2"
        }
      ]
    },
    "lambda": {
      "docker": {
        "enabled": false
      }
    },
    "semantic-commit": {
      "semanticCommits": true
    },
    "assignee:backend": {
      "assignees": [
        "mooyoul",
        "deerFried",
        "syeutyu"
      ]
    }
  }
}
