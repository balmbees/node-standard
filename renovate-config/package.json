{
  "name": "@vingle/renovate-config",
  "version": "1.0.2",
  "description": "Renovate configurations for Vingle",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/balmbees/node-standard.git"
  },
  "keywords": [
    "vingle",
    "renovate"
  ],
  "author": "MooYeol Prescott Lee <mooyoul@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/balmbees/node-standard/issues"
  },
  "homepage": "https://github.com/balmbees/node-standard#readme",
  "renovate-config": {
    "default": {
      "extends": ["config:base"],
      "automerge": false,
      "automergeType": "branch-push",
      "minor": {
        "automerge": true
      },
      "packageRules": [
        {
          "packageNames": ["aws-sdk"],
          "schedule": ["after 4am and before 6am on sunday"]
        }
      ],
      "patch": {
        "automerge": true
      },
      "rebaseStalePrs": true,
      "separateMinorPatch": true,
      "timezone": "Asia/Seoul",
      "updateNotScheduled": false
    },
    "nodejs8": {
      "packageRules": [
        {
          "packageNames": ["@types/node"],
          "allowedVersions": "^8.10.0"
        }
      ]
    },
    "lambda": {
      "docker": {
        "enabled": false
      }
    }
  }
}
